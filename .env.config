# Environment Configuration Template
# Copy this to .env and update with your production values

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:5432/database_name
# For Heroku: DATABASE_URL is automatically set
# For local PostgreSQL: postgresql://scholar_user:password@localhost/scholar_search
# For SQLite (simple deployment): sqlite:///scholar_search_prod.db

# Security
SECRET_KEY=your-super-secret-key-here-change-this-in-production

FLASK_DEBUG=False
FLASK_APP=main.py

# API Endpoints
SEMANTIC_SCHOLAR_API_URL=https://api.semanticscholar.org/graph/v1/paper/search
CROSSREF_API_URL=https://api.crossref.org/works
CORE_API_URL=https://api.core.ac.uk/v3/search/works
OPENROUTER_API_URL=https://openrouter.ai/api/v1/chat/completions

# Default Search Backend
DEFAULT_SEARCH_BACKEND=semantic_scholar

# API Keys - Replace with your actual keys
OPENROUTER_API_KEY=your-openrouter-api-key-here
CORE_API_KEY=your-core-api-key-here
OPENCITATION_API_KEY=your-opencitation-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# GeoIP Database path
GEOIP_DATABASE_PATH=data/GeoLite2-City.mmdb

# Database Connection Pool (for PostgreSQL)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
